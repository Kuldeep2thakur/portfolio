rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to projects
    match /projects/{projectId} {
      allow read: if true;
      allow write: if false; // Only allow admin writes
    }
    
    // Allow public write access to contacts (for contact form)
    match /contacts/{contactId} {
      allow read: if false; // Only allow admin reads
      allow create: if true; // Allow anyone to create contact submissions
      allow update, delete: if false; // Only allow admin updates/deletes
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
